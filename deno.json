{
  "name": "@controlx-io/jn-ec-master",
  "version": "0.1.8",
  "description": "A TypeScript/Deno wrapper for the ethercrab Rust library, implementing EtherCAT Master Class B features.",
  "tasks": {
    "lint": "deno lint --ignore='**/*_test.ts,**/*.test.ts,**/tests/**'",
    "check": "deno check **/*.ts && deno fmt --check && deno task lint",
    "build": "deno task test:rust && deno task build:rust",
    "build:rust": "deno run -A scripts/build-local.ts --release",
    "example:discover": "deno -A --unstable-ffi examples/discover.ts discovered.json $IF",
    "example:cycle": "IF=$IF deno task example:discover && sleep 3 && deno -A --unstable-ffi examples/cycle_eni_config.ts discovered.json $IF --fast",
    "test:ts": "deno test --allow-ffi --allow-read --allow-write --allow-env --unstable-ffi",
    "test:rust": "cargo test --tests -- --include-ignored",
    "test:hardware": "RUST_MIN_STACK=8388608 ETHERCAT_INTERFACE=$IF cargo test --test integration_test -- --test-threads=1",
    "test": "deno task check && deno task test:ts && deno task test:rust",
    "download-binaries": "deno run -A scripts/download-binaries.ts"
  },
  "compilerOptions": {
    "lib": [
      "deno.unstable",
      "deno.ns",
      "dom"
    ],
    "types": [
      "npm:@types/node"
    ],
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false
  },
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "exclude": [
    "tmp/**/*"
  ],
  "imports": {
    "@controlx-io/cycle-loop": "jsr:@controlx-io/cycle-loop@^0.1.0",
    "@std/assert": "jsr:@std/assert@^1.0.16",
    "@std/path": "jsr:@std/path@^1.1.3",
    "@std/testing": "jsr:@std/testing@^1.0.16",
    "fast-xml-parser": "npm:fast-xml-parser@5.3.2"
  },
  "exports": {
    ".": "./mod.ts",
    "./scripts/download-binaries": "./scripts/download-binaries.ts"
  },
  "publish": {
    "include": [
      "./mod.ts",
      "./src/",
      "./scripts/download-binaries.ts",
      "./README.md"
    ],
    "exclude": [
      "./ethercrab/",
      "./src/tests/",
      "./src/__specs__/",
      "./src/utils/__specs__/",
      "./lib/libethercrab_ffi_dev.dylib",
      "./lib/libethercrab_ffi_dev.so",
      "./lib/libethercrab_ffi_dev.dll"
    ]
  }
}
